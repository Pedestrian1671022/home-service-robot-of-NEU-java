<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/robot_info_text"
        android:orientation="vertical"
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/robot_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test1"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/master_uri_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/robot_wifi_image"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/wifi_0" />
        <ImageView
            android:id="@+id/robot_edit_image"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_edit_black_24dp"/>
        <ImageView
            android:id="@+id/robot_delete_image"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_delete_black_24dp"/>
    </LinearLayout>

</LinearLayout>